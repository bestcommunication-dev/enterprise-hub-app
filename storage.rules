rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Files are stored at paths like: user-uploads/{userId}/{fileId}
    match /user-uploads/{userId}/{allPaths=**} {
      // READ: Allow public reads. You could restrict this to the owner if needed.
      allow read: if true;

      // WRITE: Only the authenticated user whose UID matches the {userId} in the path can write.
      // Also, check for a reasonable file size (e.g., max 5MB).
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024;
    }
  }
}
